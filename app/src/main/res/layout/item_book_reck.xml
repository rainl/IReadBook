<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip">

    <ImageView
        android:id="@+id/bookImageTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/default_image" />

    <ProgressBar
        android:id="@+id/redProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/progressbar_style_gray"
        app:layout_constraintTop_toBottomOf="@+id/bookImageTv" />

    <TextView
        android:id="@+id/bookNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:padding="5dip"
        android:textColor="@color/color_ff333333"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/redProgress" />
</android.support.constraint.ConstraintLayout>